@using FindHikingFellow.Core.Models.PersonalList
@using FindHikingFellow.Core.Models.Tour
@using FindHikingFellow.Infrastructure.Data.Models.Enumerations
@model AddToListFormModel

@{
    ViewData["Title"] = "Add to list";
}

<h2>@this.ViewData["Title"]</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <div class="col-md-8 mt-2">
            <div class="row">
                <div class="col form-group col-md-8 mt-2">
                    <label asp-for="ListId" class="fw-bold">Choose list (to add the tour to) or add a new one</label>
                    <select asp-for="ListId" class="form-control mt-2">
                        @foreach (var list in Model.Lists)
                        {
                            <option value="@list.Id">@list.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ListId" class="text-danger"></span>
                </div>
                <div class="col row-cols-md-1 mt-3">
                    <a href="/PersonalList/AddNewList" class="btn btn-success mt-4">Add new list</a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <input type="submit" class="btn btn-primary mt-4" value="Save" />
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}