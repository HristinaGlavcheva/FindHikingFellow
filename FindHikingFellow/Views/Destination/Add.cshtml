@using FindHikingFellow.Core.Models.Destination
@model AddDestinationFormModel

@{
    ViewData["Title"] = "Add Destinatin";
}

<form method="post" class="col-md-6 offset-md-3">
    <h1 class="text-center">Add new destination for your fascinating tours!</h1>
    <div class="form-group mt-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control"/>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary mt-3" value="Save" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}