@using FindHikingFellow.Core.Models;
@model IndexViewModel

@{
    this.ViewData["Title"] = "Welcome";
}

<div class="text-center">
    <h1 class="display-4">Welcome to FindHikingFellow!</h1>
    <h2>Let you find a fellow to share your hiking adventure with</h2>
    <h5>Choose your hiking destination:</h5>
    <div class="row">
        @foreach (var destination in Model.Destinations)
        {
            <div class="col-md-4">
                <div class="card">
                    <a asp-controller="Tours" asp-action="GetToursByDestination" asp-route-id="btn btn-primary">
                        <h5 class="card-title text-center">@destination.Name</h5>
                        <img class="card-img-top" src="@destination.ImageUrl" alt="@destination.Name">View tours
                    </a>
                </div>
            </div>
        }
    </div>
    <div class="row">
        @foreach (var tour in Model.Tours)
        {
            <div class="col-md-4">
                <div class="card">
                    <h5 class="card-title text-center">@tour.Name</h5>
                    <a asp-controller="Tours" asp-action="Details" asp-route-id="btn btn-primary">View More</a>
                </div>
            </div>
        }
    </div>
</div>
