@using FindHikingFellow.Core.Models
@using FindHikingFellow.Core.Models.PersonalList
@model AddListFormModel

@{
    ViewData["Title"] = "Add new list";
}

<h3 class="text-center">Add new list to save the tours you are interested in</h3>
<form method="post" class="col md-6 offset-3 mt-5">
   <div class="row">
        <div class="form-group col md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-success col-md-4 mt-4" value="Save" />
        </div>
   </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}