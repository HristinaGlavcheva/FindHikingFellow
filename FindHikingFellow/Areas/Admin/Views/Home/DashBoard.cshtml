@{
    ViewData["Title"] = "Dashboard";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3"> This is your administrator area - you can <b>read</b>, <b>create</b>, <b>delete</b> and <b>edit</b> tours. <br />You can <b>join</b> and <b>leave</b> tours, too! </p>
    <p class="lead mt-1"> You can also see <b>all users and participants</b> and <b>all joins</b> in the system. </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Tour" asp-action="All" class="btn btn-primary btn-lg">All Tours</a>
    <a asp-area="" asp-controller="Tour" asp-action="Create" class="btn btn-primary btn-lg">Create Tour</a>
    <span> | </span>
    <a asp-area="" asp-controller="Tour" asp-action="MyTours" class="btn btn-primary btn-lg">My Tours</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="Joined" asp-action="All" class="btn btn-primary btn-lg">All Joins</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All" class="btn btn-primary btn-lg">All Users</a>
    <hr />
    <a asp-area="Admin" asp-controller="Destination" asp-action="All" class="btn btn-primary btn-lg">All destinations</a>
</div>